{
    "family": "mh-1-listen", 
    "networkMode": "awsvpc", 
    "executionRoleArn": "arn:aws:iam::519550959950:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "mh-1-container",
            "secrets": [
                {
                    "name": "TELEGRAM_BOT_TOKEN",
                    "valueFrom": "arn:aws:ssm:us-east-1:519550959950:parameter/mh-1/telegram_bot_api"
                },
                {
                    "name": "SPOTIFY_CLIENT_SECRET",
                    "valueFrom": "arn:aws:ssm:region:aws_account_id:parameter/mh-1/spotify_client_secret"
                },
                {
                    "name": "SPOTIFY_CLIENT_ID",
                    "valueFrom": "arn:aws:ssm:region:aws_account_id:parameter/mh-1/spotify_client_id"
                },
                {
                    "name": "YOUTUBE_API_KEY",
                    "valueFrom": "arn:aws:ssm:region:aws_account_id:parameter/mh-1/youtube_api_key"
                }
            ],
            "essential": true, 
            "entryPoint": [
                "sh",
                "-c"
            ], 
            "command": [
                "/bin/sh -c \"export PYTHONPATH=. && python core/receiver.py\""
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "mh-1",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "mh-1"
                }
            }
        }
    ], 
    "requiresCompatibilities": [
        "FARGATE"
    ], 
    "cpu": "256", 
    "memory": "512"
}